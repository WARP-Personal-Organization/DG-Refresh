{
  "format": "custom",
  "id": "blog_post",
  "label": "blog_post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "title",
          "placeholder": ""
        }
      },
      "summary": {
        "type": "StructuredText",
        "config": {
          "label": "summary",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "content": {
        "type": "StructuredText",
        "config": {
          "label": "content",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "featured_image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "category": {
        "type": "Select",
        "config": {
          "label": "category",
          "placeholder": "",
          "options": [
            "news",
            "feature",
            "opinion",
            "initiatives",
            "sports",
            "business",
            "other-pages"
          ]
        }
      },
      "subcategory": {
        "type": "Select",
        "config": {
          "label": "subcategory",
          "placeholder": "",
          "options": [
            "local",
            "fact-first-ph",
            "capiz",
            "negros",
            "health",
            "travel",
            "entertainment",
            "lifestyle",
            "arts-and-culture",
            "education",
            "environment",
            "editorial",
            "fashion-fridays",
            "empower",
            "global-shapers-iloilo",
            "zero-day",
            "local-news",
            "national-news",
            "monitoring",
            "tech-talk",
            "about-us",
            "contact-us"
          ]
        }
      },
      "author": {
        "type": "StructuredText",
        "config": {
          "label": "author",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "published_date": {
        "type": "Date",
        "config": {
          "label": "published_date",
          "placeholder": ""
        }
      },
      "is_featured": {
        "type": "Boolean",
        "config": {
          "label": "is_featured",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "updated_date": {
        "type": "Date",
        "config": {
          "label": "updated_date",
          "placeholder": ""
        }
      },
      "editors_pick": {
        "type": "Boolean",
        "config": {
          "label": "editors pick",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "banner_pick": {
        "type": "Boolean",
        "config": {
          "label": "banner pick",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "tags": {
        "type": "Group",
        "config": {
          "label": "Tags",
          "fields": {
            "tag": {
              "type": "Select",
              "config": {
                "label": "Tag",
                "placeholder": "Select a tag",
                "options": [
                  "local-news",
                  "capiz-news",
                  "health-wellness",
                  "auto-racing",
                  "fact-check-news",
                  "cebu-news",
                  "negros-news",
                  "medical-frontiers",
                  "travel-destinations",
                  "entertainment",
                  "film-reviews",
                  "music-news",
                  "celebrity-updates",
                  "lifestyle-trends",
                  "fashion-style",
                  "food-dining",
                  "franchise-business",
                  "arts-culture",
                  "therapeutic-arts",
                  "cultural-events",
                  "education-news",
                  "academic-updates",
                  "university-news",
                  "student-life",
                  "teacher-stories",
                  "environment-news",
                  "climate-change",
                  "green-living",
                  "environmental-awareness",
                  "editorial-opinion",
                  "current-events",
                  "politics-news",
                  "special-issues",
                  "foreign-politics",
                  "fashion-trends",
                  "fashion-shopping",
                  "investigative-journalism",
                  "social-impact",
                  "community-building",
                  "advocacy-reporting",
                  "sports-day",
                  "farming-agriculture",
                  "all-sports",
                  "national-news",
                  "business-news",
                  "automotive",
                  "vehicles",
                  "transportation",
                  "technology",
                  "innovations",
                  "gadgets",
                  "company-news",
                  "staff-updates",
                  "contact-info"
                ]
              }
            },
            "priority": {
              "type": "Select",
              "config": {
                "label": "Tag Priority",
                "placeholder": "",
                "options": ["primary", "secondary", "tertiary"]
              }
            }
          }
        }
      },
      "reading_time": {
        "type": "Number",
        "config": {
          "label": "Estimated Reading Time (minutes)",
          "placeholder": "Auto-calculated if left empty"
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "SEO meta description"
        }
      },
      "is_breaking_news": {
        "type": "Boolean",
        "config": {
          "label": "Breaking News",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      }
    }
  }
}
